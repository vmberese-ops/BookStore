@{
    Layout = "_Layout";
}

@{ 
    ViewData["Title"] = "Home";
}

@section breadcrumb { 
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Page 1</a></li>
        <li class="breadcrumb-item active" aria-current="page">Index</li>
    </ol>
</nav>
}

<section class="bg-light p-3 mb-4 ">
    <div class="container text-center">
        <h1>Welcome to Bookstore</h1>
        <p class="lead text-muted">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur venenatis vulputate cursus. Duis facilisis tincidunt vulputate. In blandit magna non consectetur mattis. Quisque eget ex fermentum purus auctor bibendum. Pellentesque pellentesque blandit sollicitudin. Nunc est augue, blandit nec lobortis non, auctor in elit.
        </p>
        <input type="button" name="search" value="Search books" class="btn btn-primary" />
    </div>
</section>

<div class="container">
    <div class="row">
        @for (int i = 0; i < 6; i++)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="~/images/505050.png" class="card-img-top" alt="..." width="100%" height="255">
                    <div class="card-body">
                        <h5 class="card-title">Book title</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="#" class="btn btn-outline-secondary">View</a>
                            <small class="text-muted">Author Name</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            //alert("document is ready");
        });
    </script>
}