@model IEnumerable<BookModel>

@{
    ViewData["Title"] = "All Books";
}

<h1>All books</h1>

<div class="container">
    <div class="row">
        @foreach (BookModel book in Model)
        {
            <div class="col-md-4 col-sm-3">
                <div class="card mb-4 shadow-sm">
                    <img src="~/images/505050.png" class="card-img-top" alt="..." width="100%" height="225">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-controller="book" asp-action="getbook" asp-route-id="@book.Id" asp-fragment="similarBooks" class="btn btn-outline-secondary">View</a>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
